<odoo>
	<record id="view_advanced_product_pricelist" model="ir.ui.view">
        <field name="name">Advanced Product Pricelist</field>
        <field name="model">advanced.product.pricelist</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group
                        string="Pricelist"
                        invisible="context.get('active_model') == 'product.pricelist'"
                    >
                        <field
                            name="pricelist_id"
                            options="{'no_create': True, 'no_create_edit': True}"
                        />
                    </group>
                    <group string="Filter Options">
                        <field name="show_sale_price" />
			<field name="show_standard_price" />
			<field name="show_variants" />
                        <field name="show_description" />
			<field name="show_image" />
			<field name="image_size" />
		</group>
                    <group>
                        <field name="categ_ids" widget="many2many_tags" attrs="" />
                    </group>
                </group>
                <footer>
                    <button
                        name="print_report"
                        string="Print"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        id="action_product_template_pricelist_print"
        name="Price List (PDF)"
        res_model="advanced.product.pricelist"
	binding_model="product.template"
	binding_type="report"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
    />
    <act_window
        id="action_product_product_pricelist_print"
	name="Price List (PDF)"
        res_model="advanced.product.pricelist"
	binding_model="product.product"
        binding_type="report"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
    />
    <act_window
        id="action_product_pricelist_print"
	name="Price List (PDF)"
        res_model="advanced.product.pricelist"
	binding_model="product.pricelist"
        binding_type="report"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
    />
    <act_window
        id="action_item_pricelist_print"
	name="Price List (PDF)"
        res_model="advanced.product.pricelist"
	binding_model="product.pricelist.item"
        binding_type="report"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
	/>
    <act_window
        id="action_partner_pricelist_print"
        name="Price List (PDF)"
        res_model="advanced.product.pricelist"
        binding_model="res.partner"
        binding_type="report"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
	/>
    <act_window
        id="action_pricelist_print"
        name="Print Price List"
        res_model="advanced.product.pricelist"
        groups="product.group_sale_pricelist"
        view_mode="form"
        target="new"
    />
    <menuitem
        action="action_pricelist_print"
        id="menu_product_pricelist_print"
        parent="sale.product_menu_catalog"
        sequence="200"
        groups="product.group_sale_pricelist"
    />
</odoo>
